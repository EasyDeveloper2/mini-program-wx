.navigation-bar{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  z-index: 100;
}
.navigation-bar-bg{
  height: 128rpx;
}

.navigation-bar__left{
  display: flex;
  align-items: center;
  background-color: rgba(255,255,255,0.3);
  border: 1px solid #eee;
  margin-left: 20px;
  height: 56rpx;
  border-radius: 28rpx; 
  box-sizing: border-box;
}

.navigation-bar__back{
 width: 40rpx;
 height: 40rpx;
 color: black;
 font-size: 40rpx;
 line-height: 40rpx;
 margin-left: 20rpx;
 text-align: center;
}

.navigation-bar__home{
 width: 40rpx;
 height: 40rpx;
 margin-left: 20rpx;
 color: black;
 font-size: 40rpx;
 line-height: 40rpx;
 margin-right: 20rpx;
}
.navigation-bar__title{
  position: absolute;
  left: 0;
  height:44px;
  right: 0;
  width: 100%;
  line-height: 44px;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
  z-index: -1;
}
