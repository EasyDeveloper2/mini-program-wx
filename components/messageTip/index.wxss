.main {
  max-width: 600rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 36rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.userImg {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin:0 6rpx;
}

.msg {
  flex: 1;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  opacity: 0.7;
}

.icon {
  margin-right: 10rpx;
  opacity: 0.7;
  font-size: 22rpx;
}
